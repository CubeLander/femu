CONFIG_32BIT=y
CONFIG_RISCV=y
CONFIG_MMU=y
CONFIG_SMP=n
CONFIG_NR_CPUS=1
CONFIG_MODULES=n

# ilp32d userspace (Bootlin rv32 toolchain) requires FPU state support
CONFIG_FPU=y
CONFIG_RISCV_ISA_C=n
CONFIG_RISCV_ISA_V=n

CONFIG_BLK_DEV_INITRD=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# Serial console for virt-like platform
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_OF_PLATFORM=y

# Boot args fixed for bring-up phase
CONFIG_CMDLINE_BOOL=y
CONFIG_CMDLINE="console=ttyS0 earlycon=sbi rdinit=/bin/sh"
CONFIG_CMDLINE_FORCE=y

# Early stage: no PCI/virtio requirement
CONFIG_PCI=n
CONFIG_VIRTIO=n
